<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="122dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="363dp"
        android:text="E-mail" />

    <EditText
        android:id="@+id/nom"
        android:textSize="18sp"
        android:layout_width="111dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="228dp"
        android:layout_marginTop="168dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="106dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="234dp"
        android:layout_marginTop="145dp"
        android:text="Nom" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="161dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="35dp"
        android:text="Information et documents requis" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="106dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="145dp"
        android:text="Prénoms " />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="23dp"
        android:text="Soumettre la demande" />

    <EditText
        android:id="@+id/prenom"
        android:textSize="18sp"
        android:layout_width="111dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="167dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="183dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="263dp"
        android:text="Numéro de téléphone" />

    <EditText
        android:id="@+id/phone_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="278dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/email_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="303dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/Uploader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="164dp"
        android:text="Uploader" />

    <TextView
        android:id="@+id/pdf"
        android:layout_width="251dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="221dp"
        android:text="veuillez uploader une pièce d'identité  en pdf" />

</RelativeLayout>
