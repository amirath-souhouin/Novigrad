<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateActivity">

  <TextView
      android:id="@+id/textView27"
      android:layout_width="86dp"
      android:layout_height="43dp"
      android:background="@color/colorAccent"
      android:layout_marginStart="152dp"
      android:layout_marginTop="274dp"
      android:layout_marginEnd="154dp"
      android:layout_marginBottom="26dp"
      android:text="RATE"
      android:textAlignment="center"
      android:textSize="35sp"
      app:layout_constraintBottom_toTopOf="@+id/ratesucc"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/ratesucc"
      android:layout_width="243dp"
      android:layout_height="63dp"
      android:layout_marginStart="121dp"
      android:layout_marginTop="64dp"
      android:layout_marginEnd="121dp"
      android:layout_marginBottom="33dp"
      android:hint="Succursale Name"
      app:layout_constraintBottom_toTopOf="@+id/ratingBar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView27" />

  <RatingBar
      android:id="@+id/ratingBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="76dp"
      android:layout_marginTop="33dp"
      android:layout_marginEnd="77dp"
      android:layout_marginBottom="43dp"
      app:layout_constraintBottom_toTopOf="@+id/submitRate"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ratesucc" />

  <Button
      android:id="@+id/submitRate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="160dp"
      android:layout_marginTop="26dp"
      android:layout_marginEnd="145dp"
      android:layout_marginBottom="200dp"
      android:text="SUBMIT"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ratingBar" />
</androidx.constraintlayout.widget.ConstraintLayout>